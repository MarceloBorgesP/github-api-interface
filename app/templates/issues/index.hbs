<div class='container'>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <div class="row">
        <h4 class="col-md-3">Issues</h4>
        <div style="width: 100px; float: right">
          {{link-to 'New Issue' 'issues.new' class='btn btn-primary'}}
        </div>
      </div>
    </div>
    <table class="table table-hover">
      <tbody>
        {{#each model as |issue|}}
          {{#link-to 'issues.show' issue.number class="pointer" tagName='tr'}}
            <td style="width: 30px;">
              {{state-label state=issue.state}}
            </td>
            <td style="width: 30px;">
              {{#if issue.locked}}
                <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
              {{/if}}
            </td>
            <td>{{issue.title}}</td>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
